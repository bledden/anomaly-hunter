# Anomaly Hunter - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ============================================
# PRIORITY 1: REQUIRED FOR CORE FUNCTIONALITY
# ============================================

# OpenAI - Core LLM provider (GPT-4, o1-mini)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# StackAI - Multi-model gateway
# Get from: https://www.stack-ai.com/dashboard/api-keys
STACKAI_API_KEY=YOUR_KEY_HERE

# TrueFoundry - ML platform deployment
# Get from: https://app.truefoundry.com/settings/api-keys
TRUEFOUNDRY_API_KEY=YOUR_KEY_HERE
TRUEFOUNDRY_WORKSPACE=anomaly-hunter-prod

# Sentry - Application monitoring
# Get from: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_DSN=https://YOUR_KEY@sentry.io/YOUR_PROJECT_ID

# Redpanda - Event streaming (Kafka-compatible)
# Get from: https://cloud.redpanda.com/
REDPANDA_BROKER=seed-xyz.cloud.redpanda.com:9092
REDPANDA_USERNAME=YOUR_USERNAME
REDPANDA_PASSWORD=YOUR_PASSWORD
REDPANDA_SASL_MECHANISM=SCRAM-SHA-256

# ElevenLabs - Voice synthesis
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=YOUR_KEY_HERE
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Rachel voice (default)

# ============================================
# PRIORITY 2: OPTIONAL (ENHANCED FEATURES)
# ============================================

# Airia - Enterprise workflow orchestration
# Get from: https://airia.com/request-access
AIRIA_API_KEY=YOUR_KEY_HERE
AIRIA_WORKSPACE=YOUR_WORKSPACE

# Senso - Knowledge base (RAG)
# Get from: https://www.senso.ai/contact
SENSO_API_KEY=YOUR_KEY_HERE
SENSO_ORG_ID=YOUR_ORG_ID

# Weave - LLM observability and evaluation
# Get from: https://wandb.ai/authorize
WEAVE_ENABLED=false
WANDB_API_KEY=YOUR_WANDB_API_KEY_HERE
WEAVE_PROJECT=anomaly-hunter
# WANDB_ENTITY=your_team_name  # Optional: for team accounts

# ============================================
# OPTIONAL: NOT REQUIRED FOR DEMO
# ============================================

# OpenRouter - Multi-model API access
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=YOUR_KEY_HERE

# Anthropic - Direct Claude access (fallback for StackAI)
ANTHROPIC_API_KEY=YOUR_KEY_HERE

# Snowflake - Data warehouse (if using Airia data connectors)
SNOWFLAKE_ACCOUNT=YOUR_ACCOUNT
SNOWFLAKE_USER=YOUR_USER
SNOWFLAKE_PASSWORD=YOUR_PASSWORD
SNOWFLAKE_WAREHOUSE=YOUR_WAREHOUSE
SNOWFLAKE_DATABASE=YOUR_DATABASE
SNOWFLAKE_SCHEMA=YOUR_SCHEMA

# Apify - Web scraping (optional)
APIFY_API_KEY=YOUR_KEY_HERE

# Intercom - Customer messaging (optional)
INTERCOM_API_KEY=YOUR_KEY_HERE

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment
ENV=development  # development, staging, production

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Agent Configuration
AGENT_TIMEOUT=60  # seconds
MAX_CONCURRENT_AGENTS=3

# Anomaly Detection
SEVERITY_THRESHOLD=7  # 1-10 scale
VOICE_ALERT_THRESHOLD=8  # trigger voice alerts for severity >= 8

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=anomaly_hunter.log

# ============================================
# ADVANCED SETTINGS
# ============================================

# StackAI Model Configuration
STACKAI_DEFAULT_MODEL=openai/gpt-4-turbo
STACKAI_TIMEOUT=30
STACKAI_MAX_TOKENS=2000

# TrueFoundry Deployment
TRUEFOUNDRY_REPLICAS_MIN=1
TRUEFOUNDRY_REPLICAS_MAX=5
TRUEFOUNDRY_CPU_REQUEST=1.0
TRUEFOUNDRY_MEMORY_REQUEST=2Gi

# Redpanda Topics
REDPANDA_TOPIC_ANOMALIES=anomalies
REDPANDA_TOPIC_FINDINGS=agent_findings
REDPANDA_TOPIC_VERDICTS=verdicts

# Sentry Configuration
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT=development

# ElevenLabs Voice Settings
ELEVENLABS_MODEL=eleven_monolingual_v1
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
